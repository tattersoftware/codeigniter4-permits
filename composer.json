{
	"name": "tatter/permits",
	"description": "Lightweight permission handler for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"authorization",
		"permission",
		"rights"
	],
	"homepage": "https://github.com/tattersoftware/codeigniter4-permits",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php" : ">=7.2"
	},
	"require-dev": {
		"codeigniter4/codeigniter4": "dev-develop",
		"mikey179/vfsstream": "1.6.*",
		"mockery/mockery": "^1.0",
		"phpunit/phpunit" : "^8.0"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\Permits\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit",
		"post-update-cmd": [
			"composer dump-autoload"
		]
	}
}
