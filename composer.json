{
	"name": "tatter/permits",
	"description": "Lightweight permission handler for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"authorization",
		"permission",
		"rights"
	],
	"homepage": "https://github.com/tattersoftware/codeigniter4-permits",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"require": {
		"php" : "^7.0"
	},
	"require-dev": {
		"codeigniter4/framework": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\Permits\\": "src"
		}
	},
	"scripts": {
		"post-update-cmd": [
			"composer dump-autoload",
			"php spark migrate:latest -n all"
		]
	}
}
